{
  "manifest_version": 3,
  "name": "The Nomads Game Panel",
  "version": "1.0",
  "description": "Floating dashboard with game panel",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "Hidden Panel Resources/hidden-panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "Hidden Panel Resources/hidden-panel.html",
        "Game_Choice_Resources/game-choice.html",
        "Game_Choice_Resources/game-choice.css",
        "Game_Choice_Resources/game-choice.js",
        "Luggage_Game_Resources/luggage-game.html",
        "Luggage_Game_Resources/luggage-game.css",
        "Hidden Panel Resources/good-game-button.css",
        "Hidden Panel Resources/good-game-button.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js" : ["screen-manager.js" ],
      "css": ["Hidden Panel Resources/good-game-button.css"]
    }
  ]
}

